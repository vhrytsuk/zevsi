<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="header.panel">
            <block class="Magento\Cms\Block\Block" name="menu.list.header.top" before="-">
                <arguments>
                    <argument name="block_id" xsi:type="string">top_header_list</argument>
                </arguments>
            </block>
            <block class="Magento\Cms\Block\Block" name="city.location.header.top">
                <arguments>
                    <argument name="block_id" xsi:type="string">city_​​location</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="header-wrapper">
            <block class="Magento\Cms\Block\Block" name="contact.number.top" after="top.search">
                <arguments>
                    <argument name="block_id" xsi:type="string">contact_number</argument>
                </arguments>
            </block>
            <block class="Magento\Cms\Block\Block" name="phone.callback" after="contact.number.top">
                <arguments>
                    <argument name="block_id" xsi:type="string">phone_callback</argument>
                </arguments>
            </block>
            <container name="actions.list.menu" htmlTag="ul" htmlClass="actions-list-icons" after="-" />
        </referenceContainer>
        <referenceBlock name="catalog.topnav" template="BaseAutoSound_Default::html/topmenu.phtml">
            <block class="Magento\Cms\Block\Block" name="additional.menu.info">
                <arguments>
                    <argument name="block_id" xsi:type="string">additional_info_menu</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceContainer name="footer">
            <container name="footer.navigation.content" htmlTag="div" htmlClass="navigation-footer-content" before="-">
                <container name="footer.list.navigation" htmlTag="div" htmlClass="navigation-footer-list" before="-">
                    <block class="Magento\Cms\Block\Block" name="catalog.list.footer">
                        <arguments>
                            <argument name="block_id" xsi:type="string">catalog_footer</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Cms\Block\Block" name="company.list.footer">
                        <arguments>
                            <argument name="block_id" xsi:type="string">company_footer</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Cms\Block\Block" name="buyers.list.footer">
                        <arguments>
                            <argument name="block_id" xsi:type="string">to_buyers_footer</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Cms\Block\Block" name="information.list.footer">
                        <arguments>
                            <argument name="block_id" xsi:type="string">information_footer</argument>
                        </arguments>
                    </block>
                </container>
                <container name="footer.block.copyright" htmlTag="div" htmlClass="copyright-block-content">
                    <block class="Magento\Cms\Block\Block" name="developed.block">
                        <arguments>
                            <argument name="block_id" xsi:type="string">developed</argument>
                        </arguments>
                    </block>
                </container>
            </container>
            <container name="footer.social.content" htmlTag="div" htmlClass="social-footer-content" after="-">
                <block class="Magento\Cms\Block\Block" name="phone.number.block">
                    <arguments>
                        <argument name="block_id" xsi:type="string">phone_number_footer</argument>
                    </arguments>
                </block>
                <block class="Magento\Cms\Block\Block" name="social.networks.block">
                    <arguments>
                        <argument name="block_id" xsi:type="string">social_networks</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
        <move element="my-account-link" destination="actions.list.menu" before="-"/>
        <move element="wish-list-link" destination="actions.list.menu" after="my-account-link"/>
        <move element="catalog.compare.link" destination="actions.list.menu" after="wish-list-link"/>
        <move element="minicart" destination="actions.list.menu" after="-"/>
        <move element="store_language" destination="header.panel" after="menu.list.header.top"/>
        <move element="city.location.header.top" destination="header.panel" after="store_language"/>
        <move element="copyright" destination="footer.block.copyright" before="-"/>
    </body>
</page>

